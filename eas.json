{
  "cli": {
    "appVersionSource": "local"
  },
  "build": {
    "internal": {
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_SENTRY_ENVIRONMENT": "internal",
        "SENTRY_ORG": "sparq-digital",
        "SENTRY_PROJECT": "sparqplug",
        "SENTRY_ALLOW_FAILURE": "true",
        "EXPO_PUBLIC_API_BASE_URL": "https://buddyboard.getsparqd.com"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" },
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_SENTRY_ENVIRONMENT": "development",
        "SENTRY_ORG": "sparq-digital",
        "SENTRY_PROJECT": "sparqplug",
        "SENTRY_ALLOW_FAILURE": "true",
        "EXPO_PUBLIC_API_BASE_URL": "https://buddyboard.getsparqd.com"
      }
    },
    "preview": {
      "distribution": "store",
      "android": { "buildType": "app-bundle" },
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_SENTRY_ENVIRONMENT": "preview",
        "SENTRY_ORG": "sparq-digital",
        "SENTRY_PROJECT": "sparqplug",
        "SENTRY_ALLOW_FAILURE": "true",
        "EXPO_PUBLIC_API_BASE_URL": "https://buddyboard.getsparqd.com"
      }
    },
    "production": {
      "distribution": "store",
      "android": { "buildType": "app-bundle" },
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_SENTRY_ENVIRONMENT": "production",
        "SENTRY_ORG": "sparq-digital",
        "SENTRY_PROJECT": "sparqplug",
        "SENTRY_ALLOW_FAILURE": "true",
        "EXPO_PUBLIC_API_BASE_URL": "https://buddyboard.getsparqd.com"
      }
    }
  },
  "submit": {
    "internal": {
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal"
      }
    },
    "production": {
      "ios": {
        "ascAppId": "6756227915",
        "appleId": "ligon88harold@gmail.com"
      }
    }
  }
}

