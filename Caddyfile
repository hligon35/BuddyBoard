buddyboard.getsparqd.com {
  # Route API + uploads to the API container.
  reverse_proxy /api/* api:3005
  reverse_proxy /uploads/* api:3005

  # Everything else (/) goes to the Expo web app.
  reverse_proxy BuddyBoardApp:3000

  # Optional: basic hardening headers
  header {
    X-Content-Type-Options nosniff
    Referrer-Policy no-referrer
  }
}
